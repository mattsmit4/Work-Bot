# ST-Bot Environment Configuration
# Copy this file to .env and fill in your actual values

# === Required: API Keys ===
PINECONE_API_KEY=your_pinecone_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_INDEX_NAME=startech-products

# === Optional: Model Configuration ===
OPENAI_CHAT_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
EMBED_MODEL=text-embedding-3-large

# === Optional: Feature Flags ===
USE_LLM_QUERY_UNDERSTANDING=true
ENABLE_MULTI_PRODUCT_RESPONSES=true
LOG_CONVERSATIONS=true

# === Optional: Admin ===
ADMIN_PASSWORD=startech2025

# === Optional: Search Configuration ===
MAX_SEARCH_RESULTS=50
SEMANTIC_SEARCH_THRESHOLD=0.35
DEFAULT_PRODUCT_DISPLAY_COUNT=5
